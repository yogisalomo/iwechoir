<% content_for :content do %>
<div class="row">
	<h1>All Photos</h1>
</div>

<div class="row">
	<div class="col-lg-12">
	    <div class="panel panel-default">
	        <div class="panel-heading">
	            <%= link_to "Add New", new_admin_photo_path,  class: "btn btn-default" %>
	        </div>
	        <!-- /.panel-heading -->
	        <div class="panel-body">
	            <div class="table-responsive">
	                <table class="table">
	                    <thead>
	                        <tr>
	                            <th>#</th>
	                            <th>Image</th>
								<th>Album</th>								
								<th>Uploaded By</th>
								<th>Action</th>
	                        </tr>
	                    </thead>
	                    <tbody>
	                        <% @photos.each do |photo| %>
								<tr>
									<td><%= photo.id%></td>
									<td><%= image_tag photo.image_url(:thumb) if photo.image? %></td>
									<td><%= photo.album_id%></td>
									<td><%= photo.user_id%></td>
									<td>
										<%= link_to 'Delete', admin_photo_path(photo),
										method: :delete %>
									</td>
								</tr>
							<% end %>
	                    </tbody>
	                </table>
	            </div>
	            <!-- /.table-responsive -->
	        </div>
	        <!-- /.panel-body -->
	    </div>
	    <!-- /.panel -->
	</div>
</div>

<% end %>