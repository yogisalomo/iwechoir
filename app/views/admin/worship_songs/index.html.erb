<% content_for :content do %>
<div class="row">
	<h1>All Worship Songs</h1>
</div>

<div class="row">
	<div class="col-lg-12">
	    <div class="panel panel-default">
	        <div class="panel-heading">
	            <%= link_to "Add New", new_admin_worship_song_path,  class: "btn btn-default" %>
	        </div>
	        <!-- /.panel-heading -->
	        <div class="panel-body">
	            <div class="table-responsive">
	                <table class="table">
	                    <thead>
	                        <tr>
	                            <th>#</th>
	                            <th>File</th>
								<th>Title</th>
								<th>Text</th>
								<th>Created By</th>
								<th>Action</th>
	                        </tr>
	                    </thead>
	                    <tbody>
	                        <% @worship_songs.each do |worship_song| %>
								<tr>
									<td><%= worship_song.id%></td>
									<td><%= image_tag worship_song.file_url(:thumb) if worship_song.file? %></td>
									<td><%= worship_song.title%></td>
									<td><%= worship_song.text%></td>
									<td><%= worship_song.user_id%></td>
									<td>
										<%= link_to 'Edit', edit_admin_worship_song_path(worship_song) %>
										<%= link_to 'Delete', admin_worship_song_path(worship_song),
										method: :delete %>
									</td>
								</tr>
							<% end %>
	                    </tbody>
	                </table>
	            </div>
	            <!-- /.table-responsive -->
	        </div>
	        <!-- /.panel-body -->
	    </div>
	    <!-- /.panel -->
	</div>
</div>

<% end %>